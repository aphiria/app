{
    "name": "aphiria/app",
    "description": "The Aphiria skeleton application",
    "keywords": [
        "PHP",
        "skeleton",
        "API"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/aphiria": "1.*@dev",
        "ext-mbstring": "*",
        "php": ">=8.0",
        "symfony/dotenv": "~5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "vimeo/psalm": "4.2.1"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.dist', '.env');\""
        ],
        "post-create-project-cmd": [
            "php -r \"echo 'Important: make ' . __DIR__ . DIRECTORY_SEPARATOR . 'tmp writable' . PHP_EOL;\""
        ],
        "post-install-cmd": [
            "php -r \"shell_exec((file_exists(getcwd() . '/composer.phar') ? PHP_BINARY . ' composer.phar' : 'composer') . ' dump-autoload -o');\"",
            "php -r \"file_exists('.env') || copy('.env.dist', '.env');\"",
            "php aphiria framework:flushcaches"
        ],
        "post-update-cmd": [
            "php -r \"shell_exec((file_exists(getcwd() . '/composer.phar') ? PHP_BINARY . ' composer.phar' : 'composer') . ' dump-autoload -o');\"",
            "php -r \"file_exists('.env') || copy('.env.dist', '.env');\"",
            "php aphiria framework:flushcaches"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
